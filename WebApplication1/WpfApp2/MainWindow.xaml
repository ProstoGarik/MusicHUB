<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Rectangle Fill="#8CBEB2"/>
            <Button Name="exitAppButton" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" Click="exitAppButton_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <Rectangle Fill="#F3B562"/>
            <ListBox Name="listBox1" Height="100" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFFFD193" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <TextBox Name="messageTextBox" VerticalAlignment="Center" Height="40" Margin="0 0 500 0" Background="#FFFFD193" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <Button Name="sendMessageButton" Width="150" Height="70" Margin="0 200 500 0" Content="Send" FontSize="16" Click="sendMessageButton_Click" Background="#8CBEB2" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <Button Name="chooseFileButton" VerticalAlignment="Center" Width="100" Height="50" Margin="500 0 0 0" Content="Choose File" FontSize="16" Click="chooseFileButton_Click" Background="#8CBEB2" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <TextBlock Name="filePathTextBlock" Height="50" Width="400" Margin="250 150 20 0" Text="None" FontSize="16" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <Button Name="sendFileButton" Width="100" Height="50" Margin="0 240 60 0" Content="Send File" FontSize ="16" Click="sendFileButton_Click" Background="#8CBEB2" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <Button Name="getFileButton" Width="100" Height="50" Margin="350 240 0 0" Content="Get File" FontSize ="16" Click="getFileButton_Click" Background="#8CBEB2" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <TextBlock Name="sendFileStateTextBlock" Width="100" Height="50" Margin="140 240 0 0" Text = "None" FontSize="16" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
            <TextBlock Name="getFileStateTextBlock" Width="100" Height="50" Margin="550 240 0 0" Text = "None" FontSize="16" Foreground="White" Style="{StaticResource CustomFont}" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="2">
            <Rectangle Fill="#8CBEB2"/>
        </Grid>
    </Grid>
</Window>
